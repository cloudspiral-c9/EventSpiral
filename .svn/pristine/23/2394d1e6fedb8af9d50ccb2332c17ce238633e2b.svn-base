		DBCollection coll = initEventColl();
		addEvent(coll, "event0", "0",
			newDate(2015, 7, 25, 0, 0, 0), // 2014年7月25日0時JST
			newDate(2015, 7, 25, 0, 0, 0), // 2014年7月25日0時JST
			"desc0"
		);
		addEvent(coll, "event1", "1",
			newDate(2015, 7, 25, 1, 0, 0), // 2014年7月25日1時JST
			newDate(2015, 7, 25, 1, 0, 0), // 2014年7月25日1時JST
			"desc1"
		);
		addEvent(coll, "event2", "2",
			newDate(2015, 7, 25, 2, 0, 0), // 2014年7月25日2時JST
			newDate(2015, 7, 25, 2, 0, 0), // 2014年7月25日2時JST
			"desc2"
		);
		addEvent(coll, "event3", "3",
			newDate(2015, 7, 25, 3, 0, 0), // 2014年7月25日3JST
			newDate(2015, 7, 25, 3, 0, 0), // 2014年7月25日3時JST
			"desc3"
		);
		addEvent(coll, "event4", "4",
			newDate(2015, 7, 25, 4, 0, 0), // 2014年7月25日4時JST
			newDate(2015, 7, 25, 4, 0, 0), // 2014年7月25日4時JST
			"desc4"
		);
		addEvent(coll, "event5", "5",
			newDate(2015, 7, 25, 5, 0, 0), // 2014年7月25日5時JST
			newDate(2015, 7, 25, 5, 0, 0), // 2014年7月25日5時JST
			"desc5"
		);
		addEvent(coll, "event6", "6",
			newDate(2015, 7, 25, 6, 0, 0), // 2014年7月25日6時JST
			newDate(2015, 7, 25, 6, 0, 0), // 2014年7月25日6時JST
			"desc6"
		);
		addEvent(coll, "event7", "7",
			newDate(2015, 7, 25, 7, 0, 0), // 2014年7月25日7時JST
			newDate(2015, 7, 25, 7, 0, 0), // 2014年7月25日7時JST
			"desc7"
